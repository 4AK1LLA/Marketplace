@model LoginViewModel

<div class="container h-100">
    <div class="row justify-content-sm-center h-100">
        <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg">
                <div class="card-body pb-4 p-5">
                    <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
                            <label class="mb-2 text-muted">Email</label>
                            @Html.TextBoxFor(vm => vm.Email, new { autofocus = true, required = true, @class = "form-control", type = "email" })
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-3">
                            <div class="mb-2 w-100">
                                <label class="text-muted">Password</label>
                                @*<a href="#" class="float-end">
                                    Forgot password?
                                    </a>*@
                            </div>
                            @Html.TextBoxFor(vm => vm.Password, new { required = true, @class = "form-control", type = "password" })
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="d-flex align-items-center">
                            @*<div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <label for="remember" class="form-check-label">Remember me</label>
                                </div>*@
                            <button type="submit" class="btn btn-primary ms-auto mt-2 mb-3">Login</button>
                        </div>
                    </form>

                    <div class="separator">or</div>

                    <form asp-controller="Auth" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <button name="provider" type="submit" value="Facebook"
                                class="btn btn-reverse mt-3 d-flex align-items-center justify-content-center">
                            <img class="login-img" src="~/images/facebook.png" />Login with Facebook
                        </button>
                        <button name="provider" type="submit" value="Google"
                                class="btn btn-reverse mt-3 d-flex align-items-center justify-content-center">
                            <img class="login-img" src="~/images/google.webp" />Login  with Google
                        </button>
                    </form>
                </div>
                <div class="card-footer py-3 border-0">
                    <div class="text-center">
                        Don't have an account?
                        <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create one</a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-5 text-muted">
                &copy; Copyright 2023 &mdash; Marketplace.com
            </div>
        </div>
    </div>
</div>